<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>fr.xolider.servermonitor.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Install</servlet-name>
        <servlet-class>fr.xolider.servermonitor.InstallServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Install</servlet-name>
        <url-pattern>/install</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>fr.xolider.servermonitor.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>fr.xolider.servermonitor.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RegisterDB</servlet-name>
        <servlet-class>fr.xolider.servermonitor.RegisterDBServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterDB</servlet-name>
        <url-pattern>/registerdb</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RegisterID</servlet-name>
        <servlet-class>fr.xolider.servermonitor.RegisterIDServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterID</servlet-name>
        <url-pattern>/registerid</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>installDB</servlet-name>
        <servlet-class>fr.xolider.servermonitor.install.InstallDB</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>installDB</servlet-name>
        <url-pattern>/installdb</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>fillDB</servlet-name>
        <servlet-class>fr.xolider.servermonitor.install.FillDB</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fillDB</servlet-name>
        <url-pattern>/filldb</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Reboot</servlet-name>
        <servlet-class>fr.xolider.servermonitor.RebootServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Reboot</servlet-name>
        <url-pattern>/reboot</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.json</url-pattern>
    </servlet-mapping>
</web-app>